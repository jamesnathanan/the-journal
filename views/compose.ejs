<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" autocapitalize="off" autocomplete="off" placeholder="just type something..." name="postTitle" class="form-control" id="postTitle">
    </div>
    <div class="form-group">
        <small class="form-text text-muted">your writing ...</small>
        <textarea name="postBody" id="postBody" cols="30" rows="5" class="form-control" placeholder="wanna tell something ? ..."></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">publish</button>
</form>


<%- include('partials/footer'); -%>
